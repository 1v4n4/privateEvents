 <div class="container d-flex justify-content-center gap-5">
  <div class="col-3 ">

    <h3 class="my-3 text-center">Events <%= current_user.name%> created</h3>
    <% current_user.events.each do |event| %>
    <div class="border border-info">
      <h5 class="mt-3 text-center"><%= event.title%></h5>
      <p class="mt-3 text-center"><%= event.description%></p>
      <p class="mt-3 text-center"><%= event.date%></p>
      </div>
    <% end %>
  </div>
  <div class="col-3">

    <h3 class="my-3 text-center">Events <%= current_user.name%> attending</h3>
    <h4 class="my-3 text-center">Next events</h4>
    <% current_user.attendeds.each do |event| %>
      <% if event.date > Time.now %>
        <div class="border border-info">
          <h5 class="mt-3 text-center"><%= event.title%></h5>
          <p class="mt-3 text-center"><%= event.description%></p>
          <p class="mt-3 text-center"><%= event.date%></p>
        </div>
      <% end %>
    <%end%>
      <h4 class="my-3 text-center">Past events</h4>
      <% current_user.attendeds.each do |event| %>
      <% if event.date < Time.now %>
        <div class="border border-info">
          <h5 class="mt-3 text-center"><%= event.title%></h5>
          <p class="mt-3 text-center"><%= event.description%></p>
          <p class="mt-3 text-center"><%= event.date%></p>
        </div>
      <% end %>        
    <% end %>
  </div>  
</div>
